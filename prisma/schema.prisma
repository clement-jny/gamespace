generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
    id Int @id @default(autoincrement())

    email    String @unique
    password String
    username String @unique

    lastname  String
    firstname String

    address  Address?
    products Product[]
}

model Address {
    id Int @id @default(autoincrement())

    street  String
    city    String
    zipCode String

    userId Int  @unique
    user   User @relation(fields: [userId], references: [id])
}

model Product {
    id Int @id @default(autoincrement())

    title       String
    description String
    price       Float
    createdAt   DateTime @default(now())

    platform         Platform
    productCondition ProductCondition

    userId Int
    user   User @relation(fields: [userId], references: [id])

    @@index([userId])
}

enum Platform {
    PLAYSTATION
    XBOX
    NINTENDO
}

enum ProductCondition {
    MINT
    GOOD
    POOR
}

